# Backend Environment Variables for Render Deployment
# Set these in your Render dashboard under Environment Variables

# Application Environment
NODE_ENV=production
PORT=10000

# Database Configuration
# Use your MongoDB Atlas connection string or Render PostgreSQL
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/uniconnect?retryWrites=true&w=majority

# Security
# Generate a strong JWT secret (use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your_super_secure_jwt_secret_here

# CORS Configuration
# Replace with your actual Vercel frontend URL
CLIENT_URL=https://your-frontend-app.vercel.app

# Optional: Additional database configuration
DB_NAME=uniconnect
DB_HOST=your-db-host
DB_PORT=27017